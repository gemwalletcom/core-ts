{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "baseUrl": ".",
      "paths": {
        "@gemwallet/swapper": ["../../packages/swapper/src/index.ts"],
        "@gemwallet/types": ["../../packages/types/src/index.ts"]
      },
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "composite": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": [
      { "path": "../../packages/swapper" },
      { "path": "../../packages/types" }
    ]
  }