{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "baseUrl": ".", 
      "paths": { 
        "@gemwallet/types": ["../types/src/index.ts"]
      },
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "composite": true, 
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": [
      { "path": "../types" } 
    ]
  }